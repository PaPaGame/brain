{
  "name": "brain-server",
  "version": "1.0.0",
  "description": "brain-server",
  "scripts": {
    "start": "npm run build-local",
    "build-prod": "cross-env NODE_ENV=production LOG_LEVEL=warn node config/build.js",
    "build-dev": "cross-env NODE_ENV=development LOG_LEVEL=all node config/build.js",
    "build-local": "cross-env NODE_ENV=development LOG_LEVEL=all webpack-dev-server --config config/webpack.local.config.js",
    "lint-fix": "eslint --fix --ext .js src/"
  },
  "author": "zhenliang.sun",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.15.3",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.2.0",
    "koa-convert": "^1.2.0",
    "koa-jwt": "^3.3.0",
    "koa-logger": "^2.0.0",
    "koa-onerror": "^3.0.1",
    "koa-response-time": "^1.0.2",
    "koa-router": "^7.1.0",
    "koa-static": "^2.1.0",
    "mongoose": "^5.3.13",
    "koa2-cors": "^2.0.5"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.5",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "cross-env": "^3.1.4",
    "crypto": "^1.0.1",
    "eslint": "^5.9.0",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^8.2.0",
    "koa-jwt": "^3.3.1",
    "koa-session": "^5.8.1",
    "ora": "^3.0.0",
    "progress-bar-webpack-plugin": "^1.11.0",
    "terser-webpack-plugin": "^1.1.0",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "watch": [
      "src/",
      "../config/"
    ],
    "delay": "200ms",
    "ext": "js,json,html"
  }
}
