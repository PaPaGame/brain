{
  "name": "brain-server",
  "version": "1.0.0",
  "description": "brain-server",
  "scripts": {
    "start": "cross-env NODE_ENV=production PORT=9050 ./node_modules/.bin/nodemon ./index.js",
    "dev": "cross-env NODE_ENV=development PORT=9050 ./node_modules/.bin/nodemon --verbose ./index.js",
    "test": "cross-env NODE_ENV=test PORT=9050 ./node_modules/.bin/nodemon ./index.js",
    "lint-fix": "eslint --fix --ext .js src/"
  },
  "author": "zhenliang.sun",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.15.3",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.2.0",
    "koa-convert": "^1.2.0",
    "koa-jwt": "^3.3.0",
    "koa-logger": "^2.0.0",
    "koa-onerror": "^3.0.1",
    "koa-response-time": "^1.0.2",
    "koa-router": "^7.1.0",
    "koa-static": "^2.1.0",
    "mongoose": "^4.13.9",
    "koa2-cors": "^2.0.5"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "cross-env": "^3.1.4",
    "crypto": "^1.0.1",
    "eslint": "^5.9.0",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^8.2.0",
    "koa-jwt": "^3.3.1",
    "koa-session": "^5.8.1",
    "nodemon": "1.17.2"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "watch": [
      "src/",
      "../config/"
    ],
    "delay": "200ms",
    "ext": "js,json,html"
  }
}
